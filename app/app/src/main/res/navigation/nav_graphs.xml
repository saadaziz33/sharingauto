<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graphs"
    app:startDestination="@id/signin">

    <fragment
        android:id="@+id/signin"
        android:name="com.example.sharingauto.signin"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signin_to_mainmenu"
            app:destination="@id/mainmenu" />
        <action
            android:id="@+id/action_signin_to_signup"
            app:destination="@id/signupbtn" />
    </fragment>
    <fragment
        android:id="@+id/mainmenu"
        android:name="com.example.sharingauto.mainmenu"
        android:label="fragment_mainmenu"
        tools:layout="@layout/fragment_mainmenu" />
    <fragment
        android:id="@+id/signupbtn"
        android:name="com.example.sharingauto.signup"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />

</navigation>